---
import Layout from '../layouts/Layout.astro';
import Markdown from '../components/Markdown.astro';
import ContextAlert from '../components/ContextAlert.astro';

import 'swiper/css';
import 'swiper/css/navigation';

const explainer = `The Royal Casino will bring you the real experience.`;
---

<Layout title="World Players Club">

  <!-- ✅ Hero Background Section -->
<section class="w-full text-white">
  <div class="flex flex-col sm:flex-row items-start max-w-5xl mx-auto px-4 sm:px-6 pt-12 pb-6 sm:gap-20 gap-8">

    <!-- Left Content -->
    <div class="sm:w-[60%] sm:gap-16">
      <h3 class="text-xl mb-2">Welcome!</h3>
      <h1 class="text-4xl font-bold text-yellow-400 mb-2">WPC CASINO</h1>
      <h4 class="text-xl mb-6">
        The Royal Casino will bring you the real experience.
      </h4>
      <a href="/Casino"
         class="flex items-center justify-center bg-yellow-500 text-black font-semibold rounded-md hover:bg-yellow-400 transition no-underline w-[148px] h-[56px]">
        Play Now
      </a>
    </div>

    <!-- Right Logo -->
    <div class="sm:w-[40%] flex justify-end">
      <img src="/logo.png" alt="Logo" class="w-28 sm:w-55 h-auto" />
    </div>

  </div>
</section>


<section class="w-full py-12 px-4 sm:px-12 bg-transparent">
  <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-3 gap-12 pt-40">
    
    <!-- Image 1 -->
    <img src="/images/step1.png" alt="Step 1" class="w-full rounded-md shadow-md" />

    <!-- Image 2 -->
    <img src="/images/step2.png" alt="Step 2" class="w-full rounded-md shadow-md" />

    <!-- Image 3 -->
    <img src="/images/step3.png" alt="Step 3" class="w-full rounded-md shadow-md" />

  </div>
</section>
<section class="w-full py-16 px-4 sm:px-12 bg-transparent text-center">
  <h1 class="text-3xl sm:text-4xl font-bold text-white">
    Apply for free <span class="text-yellow-400">15 Slots</span>
  </h1>
</section>

<section class="w-full py-12 px-4 sm:px-12 relative">
  <!-- Scrollable Container -->
  <div class="flex justify-center w-full">
<div id="scrollGallery" class="flex gap-4 overflow-x-auto scroll-smooth w-[1260px] mx-auto scrollbar-hide">
      <!-- Image 1 -->
      <img
        src="/images/slider3.jpg"
        alt="Image 1"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />
      <!-- Image 2 -->
      <img
        src="/images/slider2.jpg"
        alt="Image 2"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />
      <!-- Image 3 -->
      <img
        src="/images/slider1.jpg"
        alt="Image 3"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />
      <!-- Video 4 -->
      <video
        src="/videos/promo.mp4"
        class="h-[280px] max-w-[300px] rounded-md shadow-lg object-cover"
        autoplay
        muted
        loop
        playsinline
      ></video>
       <img
        src="/images/slider4.jpg"
        alt="Image 3"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />
       <video
        src="/videos/slider5.mp4"
        class="h-[280px] max-w-[300px] rounded-md shadow-lg object-cover"
        autoplay
        muted
        loop
        playsinline
      ></video>
       <video
        src="/videos/slider6.mp4"
        class="h-[280px] max-w-[300px] rounded-md shadow-lg object-cover"
        autoplay
        muted
        loop
        playsinline
      ></video>
      <!-- Add more images/videos as needed -->
    </div>
  </div>

  <!-- Arrow Buttons -->
  <div class="absolute right-4 bottom-4 flex gap-2">
    <button
      onclick="document.getElementById('scrollGallery').scrollBy({ left: -300, behavior: 'smooth' })"
      class="w-8 h-8 bg-[#222] text-white rounded shadow hover:bg-[#333] transition"
    >
      &#8592;
    </button>
    <button
      onclick="document.getElementById('scrollGallery').scrollBy({ left: 300, behavior: 'smooth' })"
      class="w-8 h-8 bg-[#222] text-white rounded shadow hover:bg-[#333] transition"
    >
      &#8594;
    </button>
  </div>
</section>



<section class="w-full text-white  pt-6 pb-4">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6">
    <div class="flex justify-center items-center">
      <img 
        id="winImage" 
        src="/1.-BIG-Win (1).png" 
        alt="Win Image"
        width="1440"
        height="960"
        class="object-contain transition-opacity duration-500"
      />
    </div>
  </div>
</section>

<script>
  const images = [
    "/1.-BIG-Win (1).png",
    "/2.Mega-Win (1).png",
    "/3.-super-win (1).png"
  ];

  let current = 0;
  const imageElement = document.getElementById("winImage");

  setInterval(() => {
    current = (current + 1) % images.length;
    imageElement.src = images[current];
  }, 3000); // every 3 seconds
</script>




<section class="w-full pt-10 pb-0 px-4 sm:px-12 bg-transparent text-center">
  <h1 class="text-3xl sm:text-4xl font-bold text-white">
    Jackpots and Slots
  </h1>
</section>

<section class="w-full pt-3 pb-1 px-4 sm:px-12 bg-transparent text-center">
  <h5 class="text-xs sm:text-sm font-light text-white">
    On the first Deposit we give a bonus.
  </h5>
</section>
<section class="w-full pt-0 pb-1 px-4 sm:px-12 bg-transparent text-center">
  <h5 class="text-xs sm:text-sm font-light text-white">
Play now and win  </h5>
</section>
<section class="w-full pb-4 px-4 sm:px-12 overflow-x-auto">
  <div class="flex justify-center">
    <div class="flex gap-4 w-max">
      
      <!-- Image 1 -->
      <img
        src="/images/00.png"
        alt="Image 1"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <!-- Image 2 -->
      <img
        src="/images/01.png"
        alt="Image 2"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <!-- Image 3 -->
      <img
        src="/images/02.png"
        alt="Image 3"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <img
        src="/images/03.png"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
        
      ></img>


    </div>
  </div>
</section>
</section>


<section class="w-full pt-0 pb-0 px-4 sm:px-12 overflow-x-auto">
  <div class="flex justify-center">
    <div class="flex gap-4 w-max">
      
      <!-- Image 1 -->
      <img
        src="/images/02.png"
        alt="Image 1"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <!-- Image 2 -->
      <img
        src="/images/03.png"
        alt="Image 2"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <!-- Image 3 -->
      <img
        src="/images/00.png"
        alt="Image 3"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
      />

      <img
        src="/images/01.png"
        class="h-[280px] max-w-[300px] rounded-md object-cover shadow-lg"
        
      ></img>


    </div>
  </div>
</section>

<section class="w-full m-0 p-0 flex justify-center leading-none">
  <button class="bg-[#40404c] text-white font-semibold px-6 py-3 rounded-md hover:bg-[#50505c] transition">
    Show More
  </button>
</section>

<!-- ✅ Seamless Looping Slider -->
<section class="w-full overflow-hidden py-8">
  <div class="slider-track flex gap-6">
    <!-- Original Set -->
    <img src="/sliderImages/cow boy.png" alt="Cow Boy" class="h-40" />
    <img src="/sliderImages/egypt.png" alt="Egypt" class="h-40" />
    <img src="/sliderImages/fruits.png" alt="Fruits" class="h-40" />
    <img src="/sliderImages/greek.png" alt="Greek" class="h-40" />
    <img src="/sliderImages/jungle.png" alt="Jungle" class="h-40" />
    <img src="/sliderImages/magical_.png" alt="Magical" class="h-40" />
    <img src="/sliderImages/medusa.png" alt="Medusa" class="h-40" />
    <img src="/sliderImages/nordic.png" alt="Nordic" class="h-40" />
    <img src="/sliderImages/oceans.png" alt="Oceans" class="h-40" />
    <img src="/sliderImages/space_.png" alt="Space" class="h-40" />

    <!-- Duplicate Set (for seamless looping) -->
    <img src="/sliderImages/cow boy.png" alt="Cow Boy" class="h-40" />
    <img src="/sliderImages/egypt.png" alt="Egypt" class="h-40" />
    <img src="/sliderImages/fruits.png" alt="Fruits" class="h-40" />
    <img src="/sliderImages/greek.png" alt="Greek" class="h-40" />
    <img src="/sliderImages/jungle.png" alt="Jungle" class="h-40" />
    <img src="/sliderImages/magical_.png" alt="Magical" class="h-40" />
    <img src="/sliderImages/medusa.png" alt="Medusa" class="h-40" />
    <img src="/sliderImages/nordic.png" alt="Nordic" class="h-40" />
    <img src="/sliderImages/oceans.png" alt="Oceans" class="h-40" />
    <img src="/sliderImages/space_.png" alt="Space" class="h-40" />
  </div>
</section>

<style>
  .slider-track {
    animation: scrollSlider 40s linear infinite;
    will-change: transform;
  }

  @keyframes scrollSlider {
    0% {
      transform: translate3d(0, 0, 0);
    }
    100% {
      transform: translate3d(-50%, 0, 0);
    }
  }
</style>



</Layout>
